#!/usr/bin/env bash

set -e

# Navigate to the package root for this script (generally ~/.dotfiles/config)
cd "$(dirname "$(dirname "$(readlink -f "$0")")")/config" || exit

/usr/bin/stow --target="${HOME}" \
  alacritty \
  bash \
  btop \
  environment \
  eww \
  fontconfig \
  git \
  hyprland \
  ipython \
  kitty \
  lf \
  mako \
  ranger \
  tmux \
  vim \
  waybar \
  wofi \
  rofi \
  zsh
